<h2>Login</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 control-label">UserName</label>
                    <div class="col-md-10">
                        <input type="text" name="username" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Password</label>
                    <div class="col-md-10">
                        <input type="password" name="password" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
            </form>
            <div><a href="/Account/ExternalLogIn?returnUrl=@ViewData["ReturnUrl"]&provider=Google">Log in with Google</a></div>
            <br />
            <div>
                Uncomment AuthenticationScheme = "GoogleWithCallback" in Startup.cs and comment AuthenticationScheme = "Google"
                <br />
                <a href="/Account/ExternalLogInWithCallback?returnUrl=@ViewData["ReturnUrl"]&provider=GoogleWithCallback">Google login with callback </a>
            </div>
        </section>
    </div>
</div>

